@model Vidly.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer </h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new {@class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDay)
        @Html.TextBoxFor(m => m.Customer.BirthDay, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Customer.IsSubscribeToNewsLetter)
        @Html.CheckBoxFor(m => m.Customer.IsSubscribeToNewsLetter)
    </div>

    <div class="form-group">
        <label>
            @Html.LabelFor(m => m.Customer.MembershipTypeId)
            @Html.DropDownListFor(m => m.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes,"Id","Name"),"Select Membership Type", new { @class = "form-control" }) 
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
