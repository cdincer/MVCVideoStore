@model VideoStore.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "AddNewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Movie</h2>

@using (Html.BeginForm("AddNewMovie", "Movies"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new {@class="form-control" })
    @Html.ValidationMessageFor(m => m.Name)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Genres)
    @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Genres)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.ReleaseDate)
    @Html.TextBoxFor(m => m.ReleaseDate, "{0:dd-MM-yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.ReleaseDate)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.StockAmount)
    @Html.TextBoxFor(m => m.StockAmount, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.StockAmount)
</div>
@Html.HiddenFor(m => m.Id)


<button type="submit" class="btn btn-primary">Save</button>

}
@Html.ActionLink("Go Back To Movies Index ", "Index", "Movies", new { @class = "btn btn-primary" })
@Html.AntiForgeryToken()    

@* End Of Form.*@


@section scripts
{

    @Scripts.Render("~/bundles/jqueryval");
}