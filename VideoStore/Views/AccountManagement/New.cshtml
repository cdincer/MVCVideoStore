@model  VideoStore.ViewModels.AMRegViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>


@using (Html.BeginForm("New", "AccountManagement"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(m =>m.IDNumber,"ID Number")
        @Html.TextBoxFor(m => m.IDNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IDNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RoleList, "Account Role")
        @Html.EnumDropDownListFor( x => x.RoleList, new { @class = "form-control" })       
        @Html.ValidationMessageFor(m => m.RoleList)

    </div>

    @*@Html.HiddenFor(m => m.Id)*@


    <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "AccountManagement")'">Save</button>

}
@Html.ActionLink("Go Back To Account Management  Index ", "Index", "AccountManagement", new { @class = "btn btn-primary" })
@Html.AntiForgeryToken()    